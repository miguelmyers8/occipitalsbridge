  <% end %>

  <div class="field">
    <%= f.label :title%>
    <%= f.text_field :title, :maxlength => 26  %>
  </div>

  <div class="field">
    <%= f.input :image  %>
  </div>

  <div class="field">
    <%= f.input :body, :maxlength => 600, :input_html => { class: 'test', :cols => 100, :rows => 15 }  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
